@{
    ViewData["Title"] = "Home Page";
}



<div class="container">
    <div class="card border border-5">
        <div class="card-body">
            <div class="row">
                <h1 class="display-4 card-title text-center">Welcome, Lets Create your trip!</h1>
            </div>
            <div class="row">
                <form class="formBackground offset-lg-2 text-start" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="form-group col-md-8">
                            <label @*asp-for="TripName"*@>Trip Name</label>
                            <input @*asp-for="TripName"*@ type="text" class="form-control" id="inputTripName" placeholder="Epic Trip Name">
                        </div>
                        <div class="form-group col-md-8">
                            <label @*asp-for="StartDate"*@>Trip Start date</label>
                            <input @*asp-for="StartDate"*@ type="date" class="form-control" id="inputTripStartDate" placeholder="Enter trip start date">
                        </div>
                        <div class="form-group col-md-8">
                            <label @*asp-for="EndDate"*@>Trip End date</label>
                            <input @*asp-for="EndDate"*@ type="date" class="form-control" id="inputTripEndDate" placeholder="Enter trip end date">
                        </div>
                    </div>
                </form>
            </div>


        </div>



    </div>





</div>
